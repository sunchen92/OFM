+/**
+   Deletes @field from @tra and all fields linked after it.
+
+   #category Fields
+*/
+void ser_del_field(ser_tra_t * tra, ser_field_t * field)
+{
+  ser_field_t * tmp;
+  
+  if (!tra || !field)
+    return;
+
+  SER_DPRINT("deleting field %s->%s\n", tra->id, field->tag);
+
+  do
+  {
+    tmp = field->next;
+
+    free(field->tag);
+    free(field->type);
+    free(field);
+
+    field = tmp;
+  } while (field);
+
+  if (tra->first_field == field)
+    tra->first_field = NULL;
+  
+  return;
