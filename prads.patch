+  else if (strcmp(type, "int8_t") == 0)
+    *(int8_t *)ptr = svalue;
+  else if (strcmp(type, "int16_t") == 0)
+    *(int16_t *)ptr = svalue;
+  else if (strcmp(type, "int32_t") == 0)
